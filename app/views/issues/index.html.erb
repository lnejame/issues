<h1>Listing issues</h1>

<table class="table table-striped">
  <tr>
    <th>Issue</th>
    <th>Subject</th>
    <th>Category</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.issue_id %></td>
    <td><%= issue.subject %></td>
    <td><%= issue.category_id %></td>
    <td><%= issue.description %></td>
    <td><%= link_to 'Show', issue, class: "btn" %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue), class: "btn" %></td>
    <td><%= link_to 'Destroy', issue, class: "btn", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path, class: "btn" %>
